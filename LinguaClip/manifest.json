{
  "manifest_version": 3,
  "name": "LinguaClip",
  "version": "1.0",
  "description": "Guarda palabras o frases seleccionadas para aprender vocabulario nuevo",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://translate.google.com/*",
    "https://api.dictionaryapi.dev/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
